@model PatientVM

<h1>Patient Details</h1>
<h4>
    @Model.FullName
</h4>
<a asp-controller="Appointment" asp-route-patientId="@Model.id" asp-action="Create" class="btn btn-dark">
    New Appointment
</a>
<p>
    <strong>Age:</strong> @Model.Age
</p>
<p>
    <strong>National ID:</strong> @Model.NationalId
</p>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Appoint Date</th>
            <th scope="col">Doctor Name</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Appointments)
        {
            <tr>
                <td>@p.id</td>
                <td>@p.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@p.DoctorName</td>
                <td>@p.Status</td>
            </tr>
        }
    </tbody>
</table>