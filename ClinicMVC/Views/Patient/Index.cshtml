@model List<PatientVM>
@{
    ViewData["Title"] = "Patients";
}

<h4 class="card-title">
    Patients
</h4>
<div class="d-flex justify-content-between">
    <h6 class="card-subtitle">
        # Patients @Model.Count
    </h6>
    <a asp-controller="Patient" asp-action="Create" class="btn btn-primary">
        New Patient
    </a>
</div>
<p>
    @ViewData["CreatedBy"]
    <br />
    @ViewBag.CreatedBy
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">FullName</th>
            <th scope="col">National Id</th>
            <th scope="col">Email</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Date of Birth</th>
            <th scope="col">Gender</th>
            <th scope="col">Age</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model) {
            <tr>
                <td>@p.id</td>
                <td>@p.FullName</td>
                <td>@p.NationalId</td>
                <td>@p.Email</td>
                <td>@p.PhoneNumber</td>
                <td>@p.DateOfBirth.ToShortDateString()</td>
                <td>@p.Gender</td>
                <td>@p.Age</td>
                <td>
                    <a asp-controller="Patient" asp-action="Details" asp-route-id="@p.id" class="btn btn-primary">
                        Details
                    </a>
                    <a asp-controller="Patient" asp-action="Update" asp-route-id="@p.id" class="btn btn-secondary">
                        Update
                    </a>
                    <a href="javascript:;" data-id="@p.id" class="btn btn-danger js-delete">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
                $(".js-delete").on("click", function () {
            var btn = $(this);
            var id = btn.data("id");

            Swal.fire({
                title: "Are you sure?",
                text: "This action cannot be undone.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Patient/Delete/' + id,
                        type: 'GET',
                        success: function () {
                            btn.parents("tr").remove();
                        },
                        error: function () {
                            Swal.fire("Error!", "Could not delete the Patient.", "error");
                        }
                    });
                }
            });
        });

    </script>
}

