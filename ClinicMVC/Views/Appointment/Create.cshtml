@model CreateAppointmentVM

<form method="post">
    <h4 class="card-title">
        Add a new Appointment
    </h4>
    <div>
        <label asp-for="AppointmentDate"></label>
        <input asp-for="AppointmentDate" class="form-control" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="DoctorID"></label>
        <select asp-for="DoctorID" asp-items="Model.Doctors" class="form-control"></select>
        <span asp-validation-for="DoctorID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PatientID"></label>
        <select asp-for="PatientID" asp-items="Model.Patients" class="form-control"></select>
        <span asp-validation-for="PatientID" class="text-danger"></span>
    </div>
    <div>
        <br />
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <!--to validate in the client side-->
    <partial name="_ValidationScriptsPartial" />
}
