@model List<AppointmentVM>

@{
    ViewData["Title"] = "Appointments";
}
<h2>Appointments</h2>

<div class="d-flex justify-content-between">
    <h6 class="card-subtitle">
        # of Appointments @Model.Count
    </h6>

</div>

<table class="table">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Date & Time</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.PatientName</td>
                <td>@a.DoctorName</td>
                <td>@a.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <span class="badge @(a.Status == "Scheduled" ? "bg-info" : a.Status == "Completed" ? "bg-success" : "bg-danger")">
                        @a.Status
                    </span>
                </td>
                <td>
                    <a asp-controller="Appointment" asp-action="Details" asp-route-id="@a.id" class="btn btn-primary">
                    Details
                </a>
                </td>
                <td>
                    <a href="javascript:;" data-id="@a.id" class="btn btn-danger js-delete">
                        Delete
                    </a>
                </td>

                
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
                $(".js-delete").on("click", function () {
            var btn = $(this);
            var id = btn.data("id");

            Swal.fire({
                title: "Are you sure?",
                text: "This action cannot be undone.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Appointment/Delete/' + id,
                        type: 'GET',
                        success: function () {
                            btn.parents("tr").remove();
                        },
                        error: function () {
                            Swal.fire("Error!", "Could not delete the Appointment.", "error");
                        }
                    });
                }
            });
        });

    </script>
    }